<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:padding="5dp"
                android:id="@+id/posm_txt"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:orientation="vertical"
                android:weightSum="8"
                android:padding="@dimen/padding_standard">

                <LinearLayout
                    android:id="@+id/ll_exit_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:padding="@dimen/padding_standard"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Present"
                        android:textSize="@dimen/text_size_medium"/>

                    <Spinner
                        android:id="@+id/POSM_exist_spinner"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"></Spinner>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/deploymentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:weightSum="6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:visibility="gone"
                        android:padding="@dimen/padding_standard"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Old Deployment"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/old_deployment_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="Deployment"
                            android:inputType="number"
                            android:maxLength="5"
                            android:imeOptions="actionDone"
                            android:layout_weight="1"></EditText>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:visibility="gone"
                        android:padding="@dimen/padding_standard"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="New Deployment"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/new_deployment_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="Deployment"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:maxLength="5"
                            android:layout_weight="1"></EditText>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="@dimen/padding_standard"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/deploymentImage"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/camera_orange" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reason_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:padding="@dimen/padding_standard"
                    android:weightSum="4"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reason"
                        android:textSize="@dimen/text_size_medium"/>

                    <Spinner
                        android:id="@+id/deployment_reason"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="3"></Spinner>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
